---
import { Image } from "astro:assets";
import Hamburger from "./hamburger.astro";
---

<header class="container">
  <div class="wrapper">
    <h1>
      <a href="/"
        ><Image
          src=`${import.meta.env.BASE_URL}/goconference.svg`
          alt="Go Conference"
          width="234"
          height="40"
        /></a
      >
    </h1>
    <Hamburger id="toggle" />
  </div>
  <nav id="navigation" class="collapsed">
    <ul>
      <li><a href="/">Home</a></li>
      <!-- ページの準備ができ次第コメントアウトを外す -->
      <!-- <li><a href="#">Sessions</a></li>
      <li><a href="#">Timetable</a></li>
      <li><a href="#">Floor Guide</a></li>
      <li><a href="#">Staff</a></li>
      <li><a href="#">English</a></li> -->
    </ul>
  </nav>
</header>

<style>
  .container {
    padding: 16px;
    background-color: #e1e1e1;

    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    align-items: center;

    @media (max-width: 768px) {
      flex-direction: column;
      padding: 8px 16px;
      gap: 8px;
    }
  }

  .wrapper {
    flex-grow: 1;
    display: flex;
    align-items: center;

    @media (max-width: 768px) {
      width: 100%;
    }
  }

  h1 {
    color: black;
    flex-grow: 1;
  }

  #toggle {
    display: none;
    @media (max-width: 768px) {
      display: block;
    }
  }

  .expanded {
    @media screen and (max-width: 768px) {
      display: block;
      animation: pullDown 0.3s ease;
    }
  }

  .collapsed {
    @media screen and (max-width: 768px) {
      display: none;
    }
  }

  @keyframes pullDown {
    from {
      transform: translateY(-20%);
    }
    to {
      transform: translateY(0);
    }
  }

  ul {
    list-style: none;

    display: flex;
    flex-direction: row;
    gap: 16px;
    font-size: 1.3rem;

    @media (max-width: 768px) {
      flex-direction: column;
    }
  }

  li {
    text-align: center;
  }

  a {
    text-decoration: none;
    color: inherit;
  }
</style>

<script is:inline>
  function handleClick() {
    document.getElementById("navigation").classList.toggle("expanded");
    document.getElementById("navigation").classList.toggle("collapsed");
  }
  document.getElementById("toggle").addEventListener("click", handleClick);
</script>
